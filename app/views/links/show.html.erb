<div class="container mt-4">
  <h1 class="display-4 mb-4">Show Link</h1>
  <div class="list-group">
    <div class="list-group-item d-flex justify-content-between align-items-center">
      <span class="fw-bold">Group:</span>
      <span><%= @link.links_group %></span>
    </div>
    <div class="list-group-item d-flex justify-content-between align-items-center">
      <span class="fw-bold">URL:</span>
      <span><%= @link.links_url %></span>
    </div>
    <div class="list-group-item d-flex justify-content-between align-items-center">
      <span class="fw-bold">Display Name:</span>
      <span><%= @link.links_display_name %></span>
    </div>
    <div class="list-group-item d-flex justify-content-between align-items-center">
      <span class="fw-bold">Icon:</span>
      <span class="d-flex align-items-center">
        <i class="<%= @link.links_icon %>"></i>
      </span>
    </div>
    <div class="list-group-item d-flex justify-content-between align-items-center">
      <span class="fw-bold">Enabled:</span>
      <span><%= @link.links_enabled %></span>
    </div>
    <div class="list-group-item d-flex justify-content-between align-items-center">
      <span class="fw-bold">Pinned:</span>
      <span><%= @link.links_pinned %></span>
    </div>
    <div class="list-group-item d-flex justify-content-between align-items-center">
      <span class="fw-bold">Position:</span>
      <span><%= @link.position %></span>
    </div>
  </div>
  <a href="<%= edit_link_path(@link) %>" class="btn btn-primary mt-4">Edit</a>
</div>
