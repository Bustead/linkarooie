<!-- Begin the tasks view -->
<div class="container mt-5">
  <div class="row">
    <div class="col-lg-12">
      <div class="card">
        <div class="card-header bg-primary text-white">
          <h3 class="card-title">All Tasks</h3>
        </div>
        <div class="card-body">
          <table class="table table-hover">
            <thead class="bg-light">
              <tr>
                <th scope="col">Description</th>
                <th scope="col">Status</th>
                <th scope="col">Priority</th>
                <th scope="col">Category</th>
                <th scope="col">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @tasks.each do |task| %>
                <tr>
                  <td><%= task.description %></td>
                  <td><%= task.status %></td>
                  <td><%= task.priority %></td>
                  <td><%= task.category %></td>
                  <td>
                    <%= link_to 'Edit', edit_task_path(task), class: 'btn btn-sm btn-warning mr-2' %>
                    <%= link_to 'Delete', task_path(task), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <% if @tasks.empty? %>
            <div class="text-center mt-4">
              <p class="text-muted">No tasks found. Create a new one to get started!</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- End the tasks view -->
