<!DOCTYPE html>
<html>
<head>
  <title>Loftwah's Dashboard</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <script defer src="https://use.fontawesome.com/releases/v5.15.4/js/all.js" integrity="sha384-rOA1PnstxnOBLzCLMcre8ybwbTmemjzdNlILg8O7z1lUkLXozs4DHonlDtnE7fpc" crossorigin="anonymous"></script>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbo-track': 'reload' %>
</head>
<body class="bg-dark text-light">
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark px-3">
    <% if user_signed_in? %>
      <a href="/"><img src="https://github.com/<%= current_user.username %>.png" class="rounded-circle" width="30" height="30" style="margin-right: 10px;"></a>
    <% end %>
    <a class="navbar-brand" href="/">Loftwah's Dashboard</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav mr-auto">
        <!-- Left-aligned items go here -->
      </ul>
      <ul class="navbar-nav mx-auto">
        <% if user_signed_in? %>
          <li class="nav-item px-2">
            <span>@<%= current_user.username %></span>
          </li>
        <% end %>
      </ul>
      <ul class="navbar-nav ml-auto">
        <% if user_signed_in? %>
          <li class="nav-item px-2">
            <%= link_to 'Settings', edit_settings_path, class: 'nav-link' %>
          </li>
          <li class="nav-item px-2">
            <%= link_to 'Links', links_path, class: 'nav-link' %>
          </li>
          <li class="nav-item px-2">
            <%= link_to 'Sign out', destroy_user_session_path, method: :delete, class: 'nav-link' %>
          </li>
        <% else %>
          <li class="nav-item px-2">
            <%= link_to 'Sign in', new_user_session_path, class: 'nav-link' %>
          </li>
          <li class="nav-item px-2">
            <%= link_to 'Sign up', new_user_registration_path, class: 'nav-link' %>
          </li>
        <% end %>
        <li class="nav-item px-2">
          <a id="toggleButton" class="nav-link"><i class="fas fa-lightbulb"></i></a>
        </li>
      </ul>
    </div>
  </nav>
  <div class="container">
    <%= yield %>
  </div>
  <script>
    document.getElementById('toggleButton').addEventListener('click', function() {
      const body = document.body;
      const nav = document.querySelector('.navbar');

      body.classList.toggle('bg-dark');
      body.classList.toggle('text-light');
      nav.classList.toggle('bg-dark');
      nav.classList.toggle('navbar-dark');
      nav.classList.toggle('bg-light');
      nav.classList.toggle('navbar-light');
    });
  </script>
</body>
</html>
